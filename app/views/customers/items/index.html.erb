<body>

	<%= render 'admins/genres/sidebar' %>

	<div class="col-xs-9">
		<h2>商品一覧(全<%= @items.count %>件)</h2>
		<% @items.each do |item| %>
			<%= link_to item_path(item.id) do %>
				<%= attachment_image_tag item, :image_id, :fill, 100, 50, format: 'jpeg',fallback: "no_image.jpg" %>
				<%= item.name %>
				¥<%= item.price_without_tax %>
			<% end %>
		<% end %>
	</div>

</body>

