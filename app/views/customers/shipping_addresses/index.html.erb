<%= render 'layouts/errors', obj: @shipping_address %>
<%= flash[:success] %>

<div class="row">
    <div class="col-xs-12">
      <h3><strong>配送先登録/一覧</strong></h3>
        <%= form_with(model: @shipping_address, :url => {:controller => "customers/shipping_addresses"}) do |f| %>
            <div class="shipping_addres">
                <div class="form-group col-xs-12">
                    <%= f.label :"郵便番号(ハイフンなし)" ,class: "col-xs-3 control-label" %>
                    <%= f.text_field :postal_code, class: "col-xs-4 form-control-static postal_code" %>
                </div>

                <div class="form-group col-xs-12">
                    <%= f.label :"住所" ,class: "col-xs-3 control-label" %>
                    <%= f.text_field :address, class: "col-xs-7 form-control-static address" %>
                </div>

                <div class="form-group col-xs-12">
                    <%= f.label :"宛名" ,class: "col-xs-3 control-label" %>
                    <%= f.text_field :name, class: "col-xs-4 form-control-static name" %>
                </div>
                <%= f.submit '登録する' ,class: "col-xs-2 pull-right btn-lg btn-success " %>
            </div>
        <% end %>
    </div>
</div>


<div class="row">
    <div class="col-xs-12">
        <table class="table table-hover table-bordered">
        <thead>
            <tr class="address-info">
                <th class="col-xs-2">郵便番号</th>
                <th class="col-xs-6">住所</th>
                <th class="col-xs-2">宛名</th>
                <th class="col-xs-2"></th>
            </tr>
        </thead>
        <tbody>
            <% @shipping_addresses.each do |shipping_address| %>
              <tr>
                <td class="col-xs-2"><%= shipping_address.postal_code %></td>
                <td class="col-xs-6"><%= shipping_address.address %></td>
                <td class="col-xs-2"><%= shipping_address.name %></td>
                <td class="col-xs-2">
                    <%= link_to "編集する", edit_customers_shipping_address_path(shipping_address), class: "glyphicon glyphicon-pencil btn-sm btn-primary" %>
                    <%= link_to "削除する", customers_shipping_address_path(shipping_address), method: :DELETE, data: {confirm: "本当に削除してもよろしいですか？"}, class: "glyphicon glyphicon-trash btn-sm btn-danger" %>
                </td>
              </tr>    
            <% end %>
        </tbody>
        </table>
        </div>
    </div>
</div>

