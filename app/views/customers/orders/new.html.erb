注文確認画面<div class="row">
    <h3><strong>注文情報確認</strong></h3>
    <div class="col-xs-9">
      <table class="table table-hover table-inverse table-bordered">
        <thead>
          <tr class="info">
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% @cart_items.each do |cart_item| %>
            <tr>
              <td class="text-left">
                <%= attachment_image_tag( cart_item.item, :image, size: "60x50", fallback: "no_image.jpg") %>
                <%= cart_item.item.name %>
              </td>
              <td class="text-right">
                ¥<%= (cart_item.item.price_without_tax * 1.1).floor %>
              </td>
              <td class="text-right">
                  <%= cart_item.quantity %>
              </td>
              <td class="text-right">
                ¥<%= (cart_item.item.price_without_tax * 1.1).floor * cart_item.quantity %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-xs-3 billing">
      <table class="table table-hover table-condensed table-bordered">
          <tr>
            <th class="info">配送料</th>
            <td class="text-right col-xs-5">
              ¥<%= 800 %>
            </td>
          </tr>
          <tr>
            <th class="info">商品合計</th>
            <td class="text-right">
              ¥<%=  %>
            </td>
          </tr>
          <tr>
            <th class="info">請求金額</th>
            <td class="text-right">
              ¥<%=  %>
            </td>
          </tr>
      </table>
    </div>
    <div class="col-xs-9 billing">
      <table class="table table-hover table-condensed table-bordered">
        <tr>
          <th  class="info">支払方法</th>
          <td class="text-left">
            <%=  %>
          </td>
        </tr>
        <tr>
          <th  class="info">お届け先</th>
          <td class="text-left">
            <%=  %>
          </td>
        </tr>
      </table>
      <div class ="col-xs-11">
        <%= form_with model: @order, url: customers_orders_create_path, method: :post, local: true do |f| %>
          <%= f.hidden_field :postage, value: 800 %>
          <%= f.hidden_field :total_payment, value: %>
          <%= f.hidden_field :payment_method, value: %>
          <%= f.hidden_field :order_status, value:  %>
          <%= f.hidden_field :post_code, value:  %>
          <%= f.hidden_field :address, value:  %>
          <%= f.hidden_field :name, value: %>
          <%= f.submit "購入を確定する", class: "btn btn-warning center-block col-xs-5" %>
        <% end %>
      </div>
    </div>
</div>