<!--注文履歴一覧 -->
<div class="row">
	<div class="col-xs-12">
		<h3><strong>注文履歴一覧</strong></h3>
		<table class="table table-bordered table-condensed">
		<tr>
			<td class="col-xs-2">注文日</td>
			<td class="col-xs-3">配送日</td>
			<td class="col-xs-2">注文商品</td>
			<td class="col-xs-1">支払料金</td>
			<td class="col-xs-2">ステータス</td>
			<td class="col-xs-2">注文詳細</td>
		</tr>
		<% @orders.each do |order|%>
		<tr>
			<td><%= order.created_at.strftime('%Y/%m/%d') %></td>
			<td><%= order.post_code %>
				<%= order.address %>
				<%= order.total_payment %>
			</td>
			<td><%= order.items %></td>
			<td><%= order.total_payment %></td>
			<td><%= order.order_status %></td>
			<td><%= link to "表示する", customers_order_path, class: "btn btn-primary" %></td>
		</tr>
		<% end %>
	</table>
	</div>
</div>

