<div class="row">
	<div class="col-xs-2">
		<%= render 'customers/items/sidebar', genres: @genres %>
	</div>

  <h2><%= @genre.name %>一覧(全<%= @items.count %>件)</h2>
	<div class="col-xs-9 col-xs-offset-1">
		<div class="product-card-content">



		<% @items.each do |item| %>
			<%= link_to item_path(item.id) do %>
				<%= attachment_image_tag item, :image, :fill, 100, 50, format: 'jpeg',fallback: "no_image.jpg" %>
				<%= item.name %>
				¥<%= item.price_without_tax %>
			<% end %>
		<% end %>
		</div>
	</div>
	<%= paginate @items %>
</div>
