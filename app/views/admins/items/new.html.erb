  <div class="col-md-12 col-xl-12">
      <h2>商品新規登録</h2><br>
  </div>

  <%= form_for(@items, url: admins_items_path) do |f| %>

    <div class="row">

      <div class="col-md-5 col-xl-5">
        <%= f.label :商品画像 %>
        <%= f.attachment_field :image %>
      </div>

      <div class="col-md-7 col-xl-7">
        <div class="items-group">
          <%= f.label :商品名 %>
          <%= f.text_field :name  %>
        </div>

        <div class="items-group">
          <%= f.label :商品説明 %>
          <%= f.text_area :description %>
        </div>

        <div class="items-group">
          <%= f.label :ジャンル %>
          <%= f.collection_select :genre_id, Genre.all ,:id, :name %>
        </div>

        <div class="items-group">
          <%= f.label :税抜価格 %>
          <%= f.text_field :price_without_tax %>
        </div>
        <div class="items-group">
          <%= f.label :販売ステータス %>
          <%= f.select :is_sales_status, [["販売中","true"], ["販売不可","false"]] %>
        </div>
      </div>
      <div class="col-md-offset-2 col-xl-offset-2 text-right">
        <%= f.submit "新規登録" ,class: "btn btn-primary " %>
      </div>
    </div>
  <% end %>
