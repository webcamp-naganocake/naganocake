  <div class="col-md-12 col-xl-12">
      <h2>商品詳細</h2><br>
  </div>

    <div class="row">
      <div class="col-md-5 col-xl-5">
        <%= attachment_image_tag @item, :image, :fill, 400, 400, format: "jpeg", fallback: 'no_image.jpg', size: '400×400' %>
      </div>

      <div class="col-md-7">
        <table class="table">
          <tbody>
            <tr>
              <td>商品名</td>
              <td><%= @item.name %></td>
            </tr>
            <tr>
              <td>商品説明</td>
              <td><%= @item.description %></td>
            </tr>
            <tr>
              <td>ジャンル</td>
              <td><%= @item.genre.name %></td>
            </tr>
            <tr>
              <td>税込価格</td>
              <td><%= (@item.price_without_tax*1.1).floor %>円</td>
            </tr>
            <tr>
              <td>販売ステータス</td>
              <td>
              <% if @item.is_sales_status == true %>
              販売中
              <% else %>
              販売停止中
              <% end %>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
        <div class="col-md-offset-1 col-
          md-2 text-right">
          <%= link_to "編集する", edit_admins_item_path(@item), class: "btn btn-primary" %>
        </div>
