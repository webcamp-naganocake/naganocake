<br><br>
<!-- 改行する方法がこれで良いのか -->
  <div class="col-md-6">
      <h2>注文一覧</h2><br>
  </div>

    <div class="row">
      <!-- ofsetは左右の余白 -->
      <table class="table">
        <thead>
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
            <th colspan="1"></th>
          </tr>
        </thead>

        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td><%= link_to order.created_at.strftime("%Y-%m-%d %H:%M:%S"), admins_order_path(order) %></td>
              <td><%= order.name %></td>
              <td><%= order.order_details.sum(:quantity) %></td>
              <td><%= order.order_status %></td>
            </tr>
            <% end %>
            <%= paginate @orders %>
        </tbody>
      </table>
    </div>
